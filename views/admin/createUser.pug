extend ../basic

append content
	h1 Создание пользователя

	form.col-md-6(method="post" action="/admin/createUser")
			p
				label Логин
				input(type="text" name="login" id="login" class="input-area form-control"  minlength="3" maxlength="24" placeholder="Введите логин" required )

			p
				label Пароль
				input(type="password" name="password" id="password" class="input-area form-control" minlength="5" maxlength="24" placeholder="[a-zA-Z0-9]" required)

			p
				label Повторите пароль
				input(type="password" name="passwordRep" id="passwordRep" class="input-area form-control" minlength="5" maxlength="24" placeholder="[a-zA-Z0-9]" required )

			p
				label Ф.И.О.
				input(type="text" name="fullName" id="fullName" class="input-area form-control" minlength="3" maxlength="50" placeholder="Полное имя" required)

			p
				label Права
				select(name="role" id="role" class="input-area form-control" required)
					each role in roles
						option(value=role.id)= role.name

			input(type="submit" class="btn btn-default" id="submit" value="Создать")
